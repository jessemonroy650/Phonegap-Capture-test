<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.bsdmasterindex.phonegapcapture-test"
        version     = "1.1"
        versionCode = "10" >
        <!-- versionCode is optional and Android only -->
        <preference name="phonegap-version" value="3.5.0" />

        <name>Phonegap Capture test</name>
        <description>Simple Capture test of audio and video</description>
        <author href="http://bsdmasterindex.com" email="jessemonroy650@yahoo.com">
        Jesse Monroy
        </author>
        <gap:platform name="android" />
        <gap:platform name="ios" />

        <preference name="permissions" value="none"/>
        <!-- device required so we can detect if we are using iOS -->
		<gap:plugin name="org.apache.cordova.device" version="0.2.12" />
        <!-- documentation says additional permissions required for Android -->
		<gap:plugin name="org.apache.cordova.media-capture" version="0.3.3" />
    </widget>
